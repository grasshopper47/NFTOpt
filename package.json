{
    "name": "NFT-OpT project",
    "dependencies": {
        "@emotion/react": "^11.10.0",
        "@emotion/styled": "^11.10.0",
        "@mui/icons-material": "^5.8.4",
        "@mui/material": "^5.9.3",
        "@openzeppelin/contracts": "^4.7.2",
        "clsx": "^1.2.1",
        "next": "^12.2.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.3.0",
        "react-router-dom": "^6.3.0",
        "sass": "^1.54.3"
    },
    "devDependencies": {
        "@amxx/graphprotocol-utils": "^1.1.0",
        "@graphprotocol/graph-cli": "^0.33.0",
        "@graphprotocol/graph-ts": "^0.27.0",
        "@nomiclabs/hardhat-ethers": "^2.1.0",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.6.4",
        "@types/react": "^18.0.16",
        "chai": "^4.3.6",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.6.9",
        "hardhat": "^2.10.1",
        "ipfs": "^0.63.5",
        "solidity-coverage": "0.7.21",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "scripts": {
        "clean": "npx hardhat clean",
        "compile": "npx hardhat compile",

        "~~ TESTING ~~" : "",
        "test all": "npx hardhat test",
        "test coverage": "npx hardhat coverage",
        "cancelOption": "npx hardhat test test/unit/cancelOption.ts",
        "createOption": "npx hardhat test test/unit/createOption.ts",
        "exerciseOption": "npx hardhat test test/unit/exerciseOption.ts",
        "publishRequest": "npx hardhat test test/unit/publishRequest.ts",
        "withdrawRequest": "npx hardhat test test/unit/withdrawRequest.ts",

        "~~ NODES ~~" : "",
        "start blockchain": "npx hardhat node",
        "start webserver": "next dev -p 3003",
        "start ipfs": "jsipfs init; jsipfs daemon",
        "start graph": "cd ~/Projects/graph-node && cargo run -p graph-node --release -- --postgres-url postgresql://postgres:123@localhost:5432/graph-node --ethereum-rpc localhost:http://127.0.0.1:8545 --ipfs 127.0.0.1:5002",

        "~~ CONTRACTS ~~" : "",
        "deploy all" : "npx  hardhat run scripts/publish/all.ts --network localhost",
        "deploy NFTOpt": "npx hardhat run scripts/publish/NFTOpt.ts --network localhost",
        "deploy NFT Collections": "npx hardhat run scripts/publish/NFTCollections.ts --network localhost",

        "~~ GRAPHS ~~" : "",
        "graph create node" : "graph create --node http://127.0.0.1:8020 NFTOpt",
        "graph generate" : "npx graph-compiler --config graphs/config.json --include graphs/ERC721 --export-schema --export-subgraph && ( cd graphs/ERC721/generated; graph codegen --output-dir . && ( cd ../../../; ts-node scripts/cleanDuplicatedGraphTypes.ts ) )",
        "graph deploy"   : "cd graphs/ERC721/generated; graph deploy NFTOpt --version-label v1 --ipfs http://127.0.0.1:5002 --node http://127.0.0.1:8020",

        "~~ DATA ~~" : "",
        "mint NFT": "npx hardhat run scripts/mintNFT.ts --network localhost",
        "publish 10 requests": "npx hardhat run scripts/publishRequests.ts --network localhost",
        "create 10 options": "npx hardhat run scripts/createOptions.ts --network localhost"
    }
}