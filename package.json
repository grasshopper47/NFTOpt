{
    "name": "NFT-OpT project",
    "dependencies": {
        "@emotion/react": "^11.10.0",
        "@emotion/styled": "^11.10.0",
        "@mui/icons-material": "^5.8.4",
        "@mui/material": "^5.10.0",
        "@openzeppelin/contracts": "^4.7.3",
        "clsx": "^1.2.1",
        "next": "^12.2.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.3.0",
        "react-router-dom": "^6.3.0",
        "sass": "^1.54.4"
    },
    "devDependencies": {
        "@amxx/graphprotocol-utils": "^1.1.0",
        "@graphprotocol/graph-cli": "^0.33.0",
        "@graphprotocol/graph-ts": "^0.27.0",
        "@nomiclabs/hardhat-ethers": "^2.1.0",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.3.3",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.7.3",
        "@types/react": "^18.0.17",
        "chai": "^4.3.6",
        "ethereum-waffle": "^3.4.4",
        "ethers": "^5.6.9",
        "hardhat": "^2.10.1",
        "ipfs": "^0.63.5",
        "solidity-coverage": "0.7.21",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "scripts": {
        "clean": "npx hardhat clean",
        "compile": "npx hardhat compile",

        "~~ TESTING ~~" : "",
        "test all": "npx hardhat test",
        "test coverage": "npx hardhat coverage",
        "cancelOption": "npx hardhat test test/unit/cancelOption.ts",
        "createOption": "npx hardhat test test/unit/createOption.ts",
        "exerciseOption": "npx hardhat test test/unit/exerciseOption.ts",
        "publishRequest": "npx hardhat test test/unit/publishRequest.ts",
        "withdrawRequest": "npx hardhat test test/unit/withdrawRequest.ts",

        "~~ NODES ~~" : "",
        "start blockchain": "npx hardhat node",
        "start webserver": "next dev -p 3003",
        "start ipfs": "jsipfs init; jsipfs daemon",
        "start graph": "cd ../graph-node && cargo run -p graph-node --release -- --postgres-url postgresql://postgres:123@localhost:5432/graph-node --ethereum-rpc localhost:http://127.0.0.1:8545 --ipfs 127.0.0.1:5002",

        "~~ CONTRACTS ~~" : "",
        "blockchain publish all"            : "npx hardhat run scripts/blockchain/publish/allContracts.ts   --network localhost",
        "blockchain publish NFTOpt"         : "npx hardhat run scripts/blockchain/publish/NFTOpt.ts         --network localhost",
        "blockchain publish NFTCollections" : "npx hardhat run scripts/blockchain/publish/NFTCollections.ts --network localhost",

        "~~ GRAPHS ~~" : "",
        "graph generate all" : "node scripts/graph/generate/all-schemas.mjs",
        "graph publish all"  : "node scripts/graph/publish/all-nodes.mjs",
        "graph generate NFTOpt"         : "node scripts/graph/generate/schema.mjs NFTOpt",
        "graph publish NFTOpt"          : "node scripts/graph/publish/node.mjs NFTOpt",
        "graph generate NFTCollections" : "node scripts/graph/generate/schema.mjs NFTCollections",
        "graph publish NFTCollections"  : "node scripts/graph/publish/node.mjs NFTCollections",

        "~~ DATA ~~" : "",
        "mint NFT"            : "npx hardhat run scripts/blockchain/mintNFT.ts         --network localhost",
        "publish 10 requests" : "npx hardhat run scripts/blockchain/publishRequests.ts --network localhost",
        "create 10 options"   : "npx hardhat run scripts/blockchain/createOptions.ts   --network localhost"
    }
}